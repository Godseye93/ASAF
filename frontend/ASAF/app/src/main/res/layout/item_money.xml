<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    >

    <ImageView
        android:id="@+id/item_money_imageview_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_money_textview_text"
        android:src="@drawable/ssafy"
        tools:src="@drawable/vault" />

    <TextView
        android:id="@+id/item_money_textview_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_money_imageview_image"
        app:layout_constraintStart_toStartOf="@+id/item_money_imageview_image"
        app:layout_constraintTop_toBottomOf="@+id/item_money_imageview_image"
        android:text="박현우"
        tools:text="박현우" />

</androidx.constraintlayout.widget.ConstraintLayout>